---
import { ClientRouter } from 'astro:transitions'
import { Font } from 'astro:assets'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'
import { useTranslations, type Language } from '@i18n/utils'

export interface Props {
  pageTitle?: string
  description?: string
}

const { lang } = Astro.params
const t = useTranslations(lang as Language)
const { pageTitle = t('site.title'), description = t('site.description') } = Astro.props
---

<html lang={lang || 'en'} transition:name="root" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <!-- Fonts -->
    <Font cssVariable="--font-inter" preload />
    <ClientRouter />
  </head>
  <body>
    <main class="flex min-h-screen flex-col">
      <Header />
      <div class="container mx-auto flex-grow px-4 py-8">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>
