---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { useTranslations, defaultLocale, type Language } from '@i18n/utils'
const { lang } = Astro.params
const currentLocale = lang ?? defaultLocale
const t = useTranslations(lang as Language)
---

<footer class="bg-background border-t">
  <div class="container py-8 md:py-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      <div class="md:col-span-2">
        <a href={getRelativeLocaleUrl(currentLocale, '/')} class="text-xl font-bold tracking-tight">
          {t('name')}
        </a>
        <p class="text-muted-foreground mt-2 max-w-md text-sm">
          {t('footer.description')}
        </p>
        <div class="mt-4 flex space-x-4">
          <a
            href="https://github.com"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:bg-accent hover:text-accent-foreground focus-visible:ring-ring inline-flex h-10 w-10 items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:ring-1 focus-visible:outline-none disabled:pointer-events-none disabled:opacity-50"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
            <span class="sr-only">GitHub</span>
          </a>
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:bg-accent hover:text-accent-foreground focus-visible:ring-ring inline-flex h-10 w-10 items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:ring-1 focus-visible:outline-none disabled:pointer-events-none disabled:opacity-50"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path>
              <rect width="4" height="12" x="2" y="9"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
            <span class="sr-only">LinkedIn</span>
          </a>
          <a
            href="mailto:hanlin@ntu.edu.tw"
            class="hover:bg-accent hover:text-accent-foreground focus-visible:ring-ring inline-flex h-10 w-10 items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:ring-1 focus-visible:outline-none disabled:pointer-events-none disabled:opacity-50"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            <span class="sr-only">Email</span>
          </a>
        </div>
      </div>

      <div>
        <ul class="mt-4 space-y-2 text-sm">
          <li>
            <a href={getRelativeLocaleUrl(currentLocale, '/')} class="hover:text-primary">
              {t('nav.home')}
            </a>
          </li>
          <li>
            <a href={getRelativeLocaleUrl(currentLocale, '/about')} class="hover:text-primary">
              {t('nav.about')}
            </a>
          </li>
          <li>
            <a href={getRelativeLocaleUrl(currentLocale, '/projects')} class="hover:text-primary">
              {t('nav.projects')}
            </a>
          </li>
          <li>
            <a href={getRelativeLocaleUrl(currentLocale, '/experience')} class="hover:text-primary">
              {t('nav.experience')}
            </a>
          </li>
        </ul>
      </div>

      <div>
        <ul class="mt-4 space-y-2 text-sm">
          <li>
            <a href={getRelativeLocaleUrl(currentLocale, '/skills')} class="hover:text-primary">
              {t('nav.skills')}
            </a>
          </li>
          <li>
            <a href={getRelativeLocaleUrl(currentLocale, '/education')} class="hover:text-primary">
              {t('nav.education')}
            </a>
          </li>
          <li>
            <a href={getRelativeLocaleUrl(currentLocale, '/contact')} class="hover:text-primary">
              {t('nav.contact')}
            </a>
          </li>
          <li>
            <a
              href="/cv.pdf"
              target="_blank"
              class="text-primary inline-flex h-auto p-0 underline-offset-4 hover:underline"
            >
              {t('button.download')}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-8 flex flex-col items-center justify-between border-t pt-8 md:flex-row">
      <p class="text-muted-foreground text-xs">{t('footer.copyright')}</p>
    </div>
  </div>
</footer>
