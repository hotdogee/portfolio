---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { defaultLocale } from '@i18n/utils'
const { locale } = Astro.params
const currentLocale = locale ?? defaultLocale
---

<div class="nav-links">
  <a href={getRelativeLocaleUrl(currentLocale, '/')}>Home</a>
  <a href={getRelativeLocaleUrl(currentLocale, '/about')}>About</a>
  <a href={getRelativeLocaleUrl(currentLocale, '/blog')}>Blog</a>
  <a href={getRelativeLocaleUrl(currentLocale, '/tags/')}>Tags</a>
</div>
